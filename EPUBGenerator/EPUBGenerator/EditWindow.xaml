<Window x:Class="EPUBGenerator.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPUBGenerator"
        mc:Ignorable="d"
        Title="EPUB FULL-TEXT-AUDIO BOOK GENERATOR -- EDIT BOOK MODE" Height="800" Width="1200" WindowState="Maximized"
        Icon="Resources/logoMiniR.png">

    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="progName" >
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#2f2933" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#ffffa6">
            <Label Content="BOOK INFO" Padding="0" />
            <TextBlock x:Name="projInfo" Loaded="ProjInfo_Loaded" HorizontalAlignment="Left" TextWrapping="Wrap" Text="..." VerticalAlignment="Center" Margin="10,16,0,18" ScrollViewer.HorizontalScrollBarVisibility="Auto" />

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="#FFFFADAD" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#ffffa6">
                    <Label Content="Content" />
                </Grid>
                <Grid Grid.Row="1" Background="#ff7f66">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="95,0,0,0" Style="{StaticResource progName}">
                        EPUB<LineBreak/>
                        FULL-TEXT-<LineBreak/>
                        AUDIO BOOK<LineBreak/> 
                        GENERATOR
                    </TextBlock>
                    <Image x:Name="logo" HorizontalAlignment="Left" Height="80" VerticalAlignment="Center" Width="80" Margin="10,0,0,0" Source="Resources/logoMiniR.png"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="White">
                    <Label Content="Content" />
                </Grid>
                <Grid Grid.Row="1" Background="#bdf271">
                    <Border BorderBrush="Black" BorderThickness="0 1 0 0" />
                    <Button x:Name="playB" Content="PLAY" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="200,10,0,0"/>
                        <Button x:Name="pauseB" Content="PAUSE" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="300,10,0,0"/>
                        <Button x:Name="stopB" Content="STOP" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="500,10,0,0"/>
                        <Button x:Name="forwardB" Content="FORWARD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="100,10,0,0"/>
                    <Button x:Name="backwardB" Content="BACKWARD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="40" Margin="400,10,0,0"/>
                </Grid>
                <Grid Grid.Row="2" Background="#bdf271">
                    <Border BorderBrush="Black" BorderThickness="0 1 0 0" />
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="100"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="2" Background="#bdf271" >
                <Border BorderBrush="Black" BorderThickness="1 0 0 0" />
                <Label Content="Control" />
                <StackPanel Margin="10,100,10,10">
                    <WrapPanel Margin="0,0,0,0">
                        <StackPanel>
                            <Label Content="hi" />
                            <TextBox x:Name="textBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="คำอ่าน" VerticalAlignment="Top" Width="200" Height="30" FontSize="14" Padding="5,2,0,0" />
                        </StackPanel>
                    </WrapPanel>
                    <WrapPanel Margin="0,20,0,0">
                        <StackPanel>
                            <Label Content="hi" />
                            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="30" Background="White">
                                <ComboBoxItem>Normal Item</ComboBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Other: " VerticalAlignment="Center"/>
                                    <TextBox>Enter text...</TextBox>
                                </StackPanel>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="kkk" />
                            <Label Content="lll"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>


            </Grid>

            <GridSplitter HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Column="0" Width="5" Background="#2f2933"/>
        </Grid>
        <GridSplitter ResizeDirection="Rows" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="5" Background="#2f2933" />



    </Grid>
</Window>
