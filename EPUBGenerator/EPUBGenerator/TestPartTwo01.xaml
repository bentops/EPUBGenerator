<Window x:Class="EPUBGenerator.TestPartTwo01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EPUBGenerator"
        mc:Ignorable="d"
        Title="EPUB FULL-TEXT-AUDIO BOOK GENERATOR -- EDIT BOOK MODE" Height="800" Width="1200" WindowState="Maximized">
    <Window.Resources>
        <Image x:Key="Play" Source="Resources/nextPlay.png" Height="25" Width="25" />
        <Image x:Key="Pause" Source="Resources/pause.png" Height="25" Width="25"/>
        <Style TargetType="{x:Type Label}" x:Key="HeadLabelStyle" >
            <Setter Property="FontSize" Value="30" />
            <Setter Property="FontFamily" Value="Segoe UI Semilight" />
            <Setter Property="Foreground" Value="#FFF7F7FF" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="LabelStyleInGrid" >
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Segoe UI Semilight" />
            <Setter Property="Foreground" Value="#FFF7F7FF" />
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="progName" >
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FF2F2933" />
        </Style>
        <Style TargetType="{x:Type TextBox}" x:Key="TextboxStyle" >
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
            <Setter Property="Foreground" Value="#555555" />
            <Setter Property="Padding" Value="2" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" MaxHeight="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFF7F7FF">
            <Label Content="BOOK INFO" Padding="0" />
            <TextBlock x:Name="projInfo" HorizontalAlignment="Left" TextWrapping="Wrap" Text="..." VerticalAlignment="Center" Margin="10,16,0,18" ScrollViewer.HorizontalScrollBarVisibility="Auto" />
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MaxWidth="400" MinWidth="10" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#FFFFADAD" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#FFF7F7FF">
                    <Label Content="Content" />
                </Grid>
                <Grid Grid.Row="1" Background="#FFF7F7FF">
                    <Border BorderBrush="#FF2F2933" BorderThickness="0 1 0 0" />
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Margin="95,0,0,0" Style="{StaticResource progName}">
                        EPUB<LineBreak/>
                        FULL-TEXT-<LineBreak/>
                        AUDIO BOOK<LineBreak/> 
                        GENERATOR
                    </TextBlock>
                    <Image x:Name="logo" HorizontalAlignment="Left" Height="80" VerticalAlignment="Center" Width="80" Margin="10,0,0,0" Source="Resources/logoMiniR.png"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
           <!--================================================
                HERE 
           ==============================================-->
                <Grid Grid.Row="0" Background="White">
                    <Label Content="Content" Margin="0,0,0,0" />
                    <RichTextBox x:Name="richTextBox" HorizontalAlignment="Center" Height="100" Margin="0,50,0,0" VerticalAlignment="Top" Width="Auto" Cursor="Hand">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="RichTextBox" Background="#FFFFFA91"/>
                                <Run Text="RichTextBox" Background="#FF91F0FF"/>
                                <Run Text="RichTextBox" Background="#FFD291FF"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Grid>
                
                <!--================================================
                HERE 
           ==============================================-->
                
                <Grid Grid.Row="1" Background="#FF415572" />
                <Grid Grid.Row="2" Background="#FF415572" />
            </Grid>

            <Grid Grid.Column="2" Background="#FF415572" >
              
            </Grid>

            <GridSplitter HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.Column="0" Width="3" Background="#FF2F2933"/>
        </Grid>
        <GridSplitter ResizeDirection="Rows" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="3" Background="#FF2F2933" />



    </Grid>
</Window>
